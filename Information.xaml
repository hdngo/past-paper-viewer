<Window x:Class="PastPaperViewer.Information"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PastPaperViewer"
        mc:Ignorable="d"
        Title="Information" Name="InfoWindow" Height="470px" Width="800px" ResizeMode="CanMinimize" WindowStartupLocation="CenterOwner" WindowStyle="SingleBorderWindow" Background="{x:Null}">
    <Grid>
        <Image Name="InfoImage" Source="info_light.png" Stretch="Fill" />
        <Image Name="InfoDarkImage" Source="info_dark.png" Stretch="Fill"/>
    </Grid>
</Window>
